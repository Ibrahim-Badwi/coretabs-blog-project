{
  "name": "coretabs-blog-project",
  "version": "1.0.0",
  "description": "simple blog with tags, search and comments.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js --ignore ./client/*",
    "lint": "eslint .",
    "build:ui": "rm -fr build && cd client/ && npm run build --prod && cp -r build ../",
    "deploy": "git push origin main",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && npm run deploy",
    "logs:prod": "heroku logs --tail",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Ibrahim Badwi",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "mongoose": "^5.10.11",
    "morgan": "^1.10.0",
    "reading-time-estimator": "^1.3.3"
  },
  "devDependencies": {
    "eslint": "^7.13.0",
    "nodemon": "^2.0.6"
  },
  "nodemonConfig": {
    "ignore": [
      "./client/*"
    ]
  }
}
